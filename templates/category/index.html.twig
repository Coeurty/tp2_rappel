{% extends 'base.html.twig' %}

{% block title %}Catégories
{% endblock %}

{% block body %}
	<header class="flex justify-center content-center static">
		<a class="hover:bg-gray-700 bg-gray-800 p-2 absolute top-4 left-4 cursor-pointer rounded-lg" href="{{ path('app_home') }}">Mes rappels</a>
		<h1 class="text-6xl p-4">Mes catégories</h1>
	</header>
	<main>
		<table class="table-auto w-full border-collapse border border-gray-700 text-left">
			<thead>
				<tr class="bg-gray-800">
					<th class="border border-gray-700 px-4 py-2">Nom</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr class="hover:bg-gray-700 cursor-pointer">
						<td class="border border-gray-700 px-4 py-2">
							<a href="{{ path('app_category_edit', {'id': category.id}) }}">{{ category.name }}</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5" class="border border-gray-700 px-4 py-2 text-center">Aucune catégorie</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		{{ include('category/_form.html.twig') }}
	</main>

{% endblock %}
