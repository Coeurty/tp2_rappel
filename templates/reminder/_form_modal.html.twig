{{ form_start(form, { 
	'action': path('app_reminder_edit_modal', {'id': reminder.id}),
	'attr': { 'class': 'flex justify-center' }
 }) }}

<div class="flex justify-center flex-wrap space-y-4">
	<div class="w-full">
		{{ form_label(form.title, null, { 'label_attr': { 'class': 'block text-sm font-medium' } }) }}
		{{ form_widget(form.title, {
				'attr': {
					'class': 'block w-full mt-1 p-2 bg-gray-800 text-white rounded-lg resize-none',
					'rows': 3
				}
			}) }}
	</div>

	<div class="w-full flex justify-center gap-4">
		<div>
			{{ form_label(form.eventDate, null, { 'label_attr': { 'class': 'block text-sm font-medium' } }) }}
			{{ form_widget(form.eventDate, { 'attr': { 'class': 'block w-full mt-1 p-2 bg-gray-800 text-white rounded-lg' } }) }}
		</div>

		<div>
			{{ form_label(form.category, null, { 'label_attr': { 'class': 'block text-sm font-medium' } }) }}
			{{ form_widget(form.category, { 'attr': { 'class': 'block w-full mt-1 p-2 bg-gray-800 text-white rounded-lg' } }) }}
		</div>

		<div class="flex flex-col justify-end">
			<button type="submit" class="hover:bg-gray-700 bg-gray-800 p-2 text-white rounded-lg">
				{{ button_label|default('Cr√©er') }}
			</button>
		</div>
	</div>
</div>

{{ form_end(form) }}
