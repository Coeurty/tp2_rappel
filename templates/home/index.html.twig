{% extends 'base.html.twig' %}

{% block title %}Rappels
{% endblock %}

{% block body %}
	<header class="flex justify-center content-center static">
		<a class="hover:bg-gray-700 bg-gray-800 p-2 absolute top-4 left-4 cursor-pointer rounded-lg" href="{{ path('app_reminder_new') }}">Nouveau rappel</a>
		<h1 class="text-6xl p-4">Mes rappels</h1>
		<a class="hover:bg-gray-700 bg-gray-800 p-2 absolute top-4 right-4 cursor-pointer rounded-lg" href="{{ path('app_category_index') }}">Mes catégories</a>
	</header>
	<table class="table-auto w-full border-collapse border border-gray-700 text-left">
		<thead>
			<tr class="bg-gray-800">
				<th class="border border-gray-700 px-4 py-2"></th>
				<th class="border border-gray-700 px-4 py-2">Titre</th>
				<th class="border border-gray-700 px-4 py-2">Catégorie</th>
				<th class="border border-gray-700 px-4 py-2">Date</th>
			</tr>
		</thead>
		<tbody>
			{% for reminder in reminders %}
				<tr class="hover:bg-gray-700 cursor-pointer">
					<td class="border border-gray-700 px-4 py-2">{{ include('reminder/_toggleDone_form.html.twig') }}</td>
					<td class="border border-gray-700 px-4 py-2">
						<a href="{{ path('app_reminder_edit', {'id': reminder.id}) }}">{{ reminder.title }}</a>
					</td>
					<td class="border border-gray-700 px-4 py-2">
						<a href="{{ path('app_reminder_edit', {'id': reminder.id}) }}">{{ reminder.category? reminder.category.name : '' }}</a>
					</td>
					<td class="border border-gray-700 px-4 py-2">
						<a href="{{ path('app_reminder_edit', {'id': reminder.id}) }}">{{ reminder.eventDate ? reminder.eventDate|date('d-m-Y H:i') : '' }}</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5" class="border border-gray-700 px-4 py-2 text-center">Aucun rappel</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
